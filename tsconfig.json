{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 16",
    
    "compilerOptions": {
        "lib": ["es2021", "DOM"],
        "module": "commonjs",
	"outDir": "dist",
        "target": "es2021",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    },
    "include": [
        "./src/**/*",
        "index.ts"
    ]
}
